<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detaildeteksi.DetailDeteksiActivity"
    >

    <FrameLayout
        android:id="@+id/frame_layout_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/detaildeteksi_badge_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/detaildeteksi_badge_container"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/detaildeteksi_profile_badge"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/award"
        app:layout_constraintBottom_toBottomOf="@+id/detaildeteksi_badge_container"
        app:layout_constraintStart_toStartOf="@id/detaildeteksi_badge_container"
        app:layout_constraintTop_toTopOf="@+id/detaildeteksi_badge_container" />

    <TextView
        android:id="@+id/detaildeteksi_profile_badge_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins"
        android:text="Pemburu Budaya"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/detaildeteksi_badge_container"
        app:layout_constraintStart_toEndOf="@+id/detaildeteksi_profile_badge"
        app:layout_constraintTop_toTopOf="@+id/detaildeteksi_badge_container" />


    <ImageView
        android:id="@+id/detaildeteksi_profile_badge_bar"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/progressbar"
        app:layout_constraintBottom_toTopOf="@+id/detaildeteksi_profile_badge_subheader"
        app:layout_constraintStart_toEndOf="@+id/detaildeteksi_profile_badge"
        app:layout_constraintTop_toBottomOf="@id/detaildeteksi_profile_badge_icon"
        app:layout_constraintEnd_toEndOf="@id/detaildeteksi_badge_container"/>

    <TextView
        android:id="@+id/detaildeteksi_profile_badge_subheader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins"
        android:text="2 Event Kebudayaan lagi untuk naik"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/detaildeteksi_badge_container"
        app:layout_constraintEnd_toEndOf="@+id/detaildeteksi_profile_badge_bar"
        app:layout_constraintStart_toEndOf="@+id/detaildeteksi_profile_badge"
        app:layout_constraintTop_toBottomOf="@+id/detaildeteksi_profile_badge_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>